<h1>Listing albums</h1>
<%@albums.each do |album|%>
  <% if album.errors.full_messages %>
    <% album.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Band</th>
      <th>Recording type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.band %></td>
        <td><%= album.recording_type %></td>
        <td><%= button_to 'Show',
           album_url(album),
           method: :get %></td>
           <!-- TO DO LATER -->
        <td><%= button_to 'Edit',
           edit_album_url(album),
           method: :get %></td>
        <td><%= button_to 'Delete Track',
           album_url(album),
           method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
